<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="morn" class="exam1.MorningGreetingImpl"></bean>
<bean id="after" class="exam1.AfternoonGreetingImpl"></bean>
<bean id="even" class="exam1.EveningGreetingImpl"></bean>
<bean id="night" class="exam1.NightGreetingImpl"></bean>
<bean id="local" class="java.time.LocalDateTime" factory-method="now"></bean>
</beans>
